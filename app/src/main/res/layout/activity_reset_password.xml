<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightGrey"
    tools:context=".ResetPasswordActivity">
    <include
        android:id="@+id/forget_password_tool_bar"
        layout="@layout/app_bar_layout">
    </include>
    
    <TextView
        android:layout_width="match_parent"
        android:id="@+id/message_to_user"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginTop="100dp"
        android:layout_below="@id/forget_password_tool_bar"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:text="we will send link to your mail after when you provide email and click send button.Please click on that link to reset your password."/>

    <EditText
        android:id="@+id/reset_password_email_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/message_to_user"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:layout_marginTop="15dp"
        android:hint="Enter your email"
        android:background="@drawable/input"
        android:padding="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:inputType="textEmailAddress" />
    <Button
        android:layout_width="match_parent"
        android:id="@+id/send_email"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/reset_password_email_address"
        android:layout_marginTop="10dp"
        android:padding="20dp"
        android:background="@drawable/blue_button_background"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="20sp"
        android:text="Send Link"/>


</RelativeLayout>